DIR=`dirname $0`
. ${DIR}/pgsql_profile

cmd_clear=0
cmd_start=0
cmd_end=0

while getopts "cel:n:s" opt; do
	case $opt in
	c)
		cmd_clear=1
		;;
	e)
		cmd_end=1
		;;
	l)
		DBPORT=${OPTARG}
		;;
	n)
		NAME=$OPTARG
		;;
	s)
		cmd_start=1
		;;
	esac
done

PSQL="psql -h ${HOSTNAME} -q -p ${DBPORT} -d ${SID}"

if [ $cmd_clear == 1 ]; then
    SQL="DELETE FROM time_statistics"
fi;

if [ $cmd_start == 1 ]; then
    s_time=`$GTIME`
    SQL="INSERT INTO time_statistics (task_name, s_time, int_time) 
         VALUES ('$NAME', current_timestamp, $s_time)"
fi;

if [ $cmd_end == 1 ]; then
    SQL="UPDATE time_statistics SET e_time = current_timestamp WHERE task_name = '$NAME'"
fi;

$PSQL -c "$SQL"
